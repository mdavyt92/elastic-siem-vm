[Unit]
Description=elasticsearch
Requires=docker.service network-online.target
After=docker.service network-online.target

[Service]
WorkingDirectory=/opt/docker-compose
Type=simple
TimeoutStartSec=15min
Restart=always

ExecStartPre=/usr/bin/docker-compose -f elasticsearch.yml pull --quiet --ignore-pull-failures
ExecStartPre=/usr/bin/docker-compose -f elasticsearch.yml build --pull

ExecStart=/usr/bin/docker-compose -f elasticsearch.yml up --remove-orphans

ExecStop=/usr/bin/docker-compose -f elasticsearch.yml down --remove-orphans

ExecReload=/usr/bin/docker-compose -f elasticsearch.yml pull --quiet --ignore-pull-failures
ExecReload=/usr/bin/docker-compose -f elasticsearch.yml build --pull

[Install]
WantedBy=multi-user.target
